// Single Email
.email-single {
  background: transparent !important;
  md-toolbar {
    padding: 16px;
    .email-single-title {
    	> span {
    		display: block;
    	}
    }
  }
}

.md-button.md-fab {
  line-height: 5.6rem;
  min-width: 0;
  width: 4.6rem;
  height: 4.6rem;
  border-radius: 50%;
  margin-top: 20px;
  background-color: black;
}

#ui-admin-email {
  &.ng-enter {
    @include slideInRight();
  }
  &.ng-leave {
    @include slideOutRight();
  }
}

// Dashboard Container
.dashboard-container {
  .layout-margin {
    margin: 0px;
  }
}