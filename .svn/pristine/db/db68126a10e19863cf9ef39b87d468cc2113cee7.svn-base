<div class="md-content md-padding">
    <form name="schoolForm" ng-submit="vm.submit()">
        <div class='row'>
            <md-button class="md-raised md-primary" aria-label="flat button" ng-disabled="vm.editMode" ng-click="vm.editON()">Edit</md-button>
            <md-button class="md-raised md-primary" type="submit" aria-label="save" ng-disabled="vm.save">Save</md-button>
            <md-button class="md-raised md-primary" type="button" aria-label="cancel" ng-disabled="vm.save" ng-click="vm.cancel()">Cancel</md-button>
        </div>
        <div class='row'>
            <md-table-container>
                <table md-table>
                    <thead md-head>
                        <tr md-row>
                            <th md-column>Event ID</th>
                            <th md-column>Event Name</th>
                            <th md-column>Event Description</th>
                            <th md-column>Event Date</th>
                        </tr>
                    </thead>
                    <tbody md-body>
                        <tr md-row md-auto-select ng-repeat="event in vm.eventList">
                            <td md-cell>
                                <div ng-bind-html="event.eventID"></div>
                            </td>
                            <td md-cell>
                                <div ng-bind-html="event.eventName" ng-if="vm.editMode == false"></div>
                                <md-input-container class="md-block" md-no-float ng-if="vm.editMode == true">
                                    <label for="eventName" translate>eventName</label>
                                    <input type="text" name="eventName" ng-model="event.eventName" required />
                                    <div ng-messages="schoolForm.eventName.$error" md-auto-hide="false" ng-show="schoolForm.eventName.$touched">
                                        <div ng-message when="required"><span>Please enter your eventName.</span></div>
                                    </div>
                                </md-input-container>
                            </td>
                            <td>
                                <div ng-bind-html="event.eventDetail" ng-if="vm.editMode == false"></div>
                                <md-input-container class="md-block" md-no-float ng-if="vm.editMode == true">
                                    <input type="text" name="eventDetail" ng-model="event.eventDetail" required />
                                    <div ng-messages="schoolForm.eventDetail.$error" md-auto-hide="false" ng-show="schoolForm.eventDetail.$touched">
                                        <div ng-message when="required"><span>Please enter your eventDetail.</span></div>
                                    </div>
                                </md-input-container>
                            </td>
                            <td>
                                <div ng-if="vm.editMode == false">{{event.eventDate| date}}</div>
                                <md-datepicker ng-model="event.eventDate" md-placeholder="Enter date" ng-if="vm.editMode == true"></md-datepicker>
                            </td>
                            <td>
                                <md-button class="md-raised md-primary" type="button" aria-label="remove" ng-disabled="!vm.save" ng-click="vm.remove(event)">Remove</md-button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </md-table-container>
        </div>
    </form>
</div>
