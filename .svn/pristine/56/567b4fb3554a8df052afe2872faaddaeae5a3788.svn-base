<md-dialog class="mobile-fullwidth-dialog" flex="60" flex-xs="100">
    <md-toolbar class="toolbar-default" ng-style="{ 'background-color': vm.selectedColor.backgroundColor, color: vm.selectedColor.textColor }">
        <div class="md-toolbar-tools">
            <h2>
                <span translate>{{::vm.dialogData.title}}</span>
                <span ng-show="vm.event.title"> - {{vm.event.title}}</span>
            </h2>
            <span flex></span>
            <md-button class="md-icon-button" ng-click="vm.cancelClick()" aria-label="cancel">
                <md-icon md-font-icon="zmdi zmdi-close"></md-icon>
            </md-button>
        </div>
    </md-toolbar>
    <md-divider></md-divider>
    <md-dialog-content class="md-dialog-content">
        <form class="event-dialog-form" name="eventForm">
            <md-input-container class="md-block">
                <label translate>Title</label>
                <input ng-model="vm.event.title" required>
            </md-input-container>
            <md-input-container class="md-block">
                <label translate>Number of Participant</label>
                <input ng-model="vm.event.number" required>
            </md-input-container>
            <md-input-container class="md-block ">
                <label>School</label>
                <md-select ng-model="vm.event.school" placeholder="SCHOOL" ng-change="vm.getProgramList()" name="school" required>
                    <md-option ng-repeat="school in vm.schoolList" ng-value="{{school.schoolID}}">{{school.schoolName}}</md-option>
                </md-select>
                <div ng-messages for="signup.school.$error" md-auto-hide="false" ng-show="signup.school.$touched">
                    <div ng-message when="required">Please Choose Your School</div>
                </div>
            </md-input-container>
            <div class="event-dialog-input-row" layout="row" layout-align="start center">
                <p flex hide-xs translate>Start</p>
                <md-datepicker ng-model="vm.start" md-placeholder="Start | triTranslate"></md-datepicker>
            </div>
            <div class="event-dialog-input-row" layout="row" layout-align="start center" ng-hide="vm.event.allDay">
                <p translate flex hide-xs>End</p>
                <md-datepicker ng-model="vm.end" md-placeholder="End | triTranslate"></md-datepicker>
            </div>
            <md-input-container class="md-block">
                <label translate>Number of Groupmate</label>
                <input type="text" ng-model="vm.event.grpmate">
            </md-input-container>
            <md-input-container class="md-block">
                <label translate>Description</label>
                <textarea ng-model="vm.event.description"></textarea>
            </md-input-container>
            <md-input-container class="md-block">
                <div layout="row" layout-align="space-between center">
                    <p flex translate>Color</p>
                    <md-select md-container-class="calendar-color-select" placeholder="{{'Color-PICK' | triTranslate}}" ng-model="vm.selectedColor" ng-change="vm.colorChanged()">
                        <md-option ng-value="color" ng-repeat="color in vm.colors">{{color.name}}</md-option>
                    </md-select>
                </div>
            </md-input-container>
        </form>
    </md-dialog-content>
    <md-dialog-actions layout="row">
        <md-button class="md-warn" ng-click="vm.deleteClick()" aria-label="{{'Delete' | triTranslate}}" ng-show="vm.edit" translate="Delete"></md-button>
        <span flex></span>
        <md-button ng-click="vm.cancelClick()" aria-label="{{'Cancel' | triTranslate}}" translate="Cancel"></md-button>
        <md-button ng-click="vm.okClick()" class="md-primary" aria-label="{{vm.dialogData.confirmButtonText | triTranslate}}" translate="{{::vm.dialogData.confirmButtonText}}"></md-button>
    </md-dialog-actions>
</md-dialog>
